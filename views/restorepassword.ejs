<!-- views/restorepassword.ejs -->

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal de Gestión de Eventos Universitarios</title>

    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
        crossorigin="anonymous">

    <link rel="stylesheet" href="/css/oscuro.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="icon" type="image/png" sizes="32x32" href="images/calendario_oscuro.png">
</head>
<body class>

    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card p-4 mb-2">
            <h2 class="card-title text-center" id="titulo" data-email="<%= email %>">Recupera tu contraseña: <%= email %></h2>
            <div>
                <div class="mb-3">
                    <label for="password" class="form-label">New Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
                    <div id="passwordMessage" class="mt-2 form-text"></div>
                </div>
                <button id="confirmButton" class="btn btn-outline-primary w-100">Confirmar</button>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div class="position-fixed bottom-0 end-0 p-4" aria-live="polite" aria-atomic="true">
        <div class="toast custom-toast mb-3" id="myToast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header mb-0">
                <strong class="me-auto">Notificación</strong>
                <small>just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                <!-- Aquí va el contenido del mensaje del toast de manera dinamica -->
            </div>
        </div>
    </div>

    <script src="/javascripts/recoverpassword.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>
</html>
