<%- include("partials/header.ejs", { user: user }) %>

<div class="container my-5">
    <h2 class="text-center">Estad√≠sticas de Uso</h2>
    <div class="row justify-content-center">
        <div class="col-9">
            <div class="table-responsive p-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Usuario</th>
                            <th>IP</th>
                            <th>Fecha</th>
                            <th>Hora de entrada</th>
                            <th>Hora de salida</th>
                            <th>Navegador</th>
                            <th>Sistema Operativo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% estadisticas.forEach(function(registro) { %>
                            <tr>
                                <td><%= registro.user %></td>
                                <td><%= registro.ip %></td>
                                <td><%= registro.fecha ? new Date(registro.fecha).toLocaleDateString() : 'N/A' %></td>
                                <td><%= registro.horaEntrada ? registro.horaEntrada : 'N/A' %></td>
                                <td><%= registro.horaSalida ? registro.horaSalida : 'Actualmente en uso' %></td>
                                <td><%= registro.navegador %></td>
                                <td><%= registro.OS %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer.ejs") %>